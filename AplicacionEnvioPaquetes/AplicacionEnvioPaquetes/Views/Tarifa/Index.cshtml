
@{
    ViewBag.Title = "Tarifas de servicios.";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Tarifas = ViewBag.Tarifas;
}

<div class="header-page row">
    <div class="col-md-18">
        <h2>Tarifas de servicios.</h2>
       <div class="btn-group">
            <a href="/Tarifa/New" class="btn btn-success">
                <i class="glyphicon glyphicon-plus" aria-hidden="true"></i> Nueva tarifa.
            </a>
        </div>
    </div>
</div>

<div class="row blank_space"></div>
<table id="table-dinamic" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Ciudad Origen</th>
            <th>Ciudad Destino</th>
            <th>Costo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarifa in Tarifas)
        {
        	<tr>
        		<td>@Html.Raw(tarifa["CiudadOrigen"])</td>
        		<td>@Html.Raw(tarifa["CiudadDestino"])</td>
        		<td>$@Html.Raw(tarifa["Costo"])</td>
        		<td>
        			<div class="btn-group btn-group-justified">
			            <a href='/Tarifa/Update?tarifaId=@Html.Raw(tarifa["Id"])' class="btn btn-sm btn-info " title="Modificar">
			                <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
			            </a>
			            <a href="#"  id='@Html.Raw(tarifa["Id"])' class="deleteTarifaBtn btn btn-sm btn-danger " title="Eliminar">
			                <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
			            </a>
			        </div>
        		</td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal para eliminación -->
<div class="modal-container modal-delete" style="display:none">
    <div class="modal-window">
        <div class="modal-header">
            <h3>Eliminar tarifa.</h3>
            <span class="closeModalIcon cerrarModal"><i class="glyphicon glyphicon-remove" aria-hidden="true"></i> </span>
        </div>
        <div class="modal-content-box">
            <div class="modal_content">
                <span class="error-message" style="display:none"></span>
                <span class="success-message" style="display:none"></span>
                <span>¿Realmente desea eliminar esta tarifa?</span>
            </div>
            <div class="modal-buttons btn-group"> 
                <button class="btn btn-success btnAceptar" idDataDelete="0">
                    <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Aceptar
                </button>
                <button class="btn btn-danger cerrarModal">
                    <i class="glyphicon glyphicon-remove" aria-hidden="true"></i> Cancelar
                </button>
            </div>
        </div>
    </div>
</div>